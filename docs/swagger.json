        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email",
                  "phoneNumber",
                  "password"
                ],
                "properties": {
                  "name": {
                    "description": "user name",
