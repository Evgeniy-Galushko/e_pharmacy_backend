    "/api/products": {
      "get": {
        "tags": [
          "Product"
        ],
        "summary": "List of products",
        "operationId": "getProducts",
        "description": "List of products",
        "security": [],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer"
            },
            "example": 1
          },
          {
            "in": "query",
